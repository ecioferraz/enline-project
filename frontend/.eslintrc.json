{
  "env": {
      "browser": true,
      "node": true,
      "es2021": true,
      "jest": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
      "no-console": "off",
      "arrow-parens": [2, "always"],
      "quotes": ["error", "single"],
      "implicit-arrow-linebreak": "off",
      "consistent-return": "off",
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "semi": ["error", "always"],
      "object-curly-newline": "off",
      "max-params": ["error", 4],
      "max-lines": ["error", 250],
      "max-len": [
      "error",
      {
          "code": 100
      },
      {
          "ignoreComments": true
      }
      ],
      "complexity": ["error", 5]
  }
}
